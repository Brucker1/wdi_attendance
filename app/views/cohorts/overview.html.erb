<!-- legend template -->
<ul class="bar-legend"; style="list-style-type: square; font-size: 20px; width: 300px;border: 2px dashed black"><li style="color: rgba(219,20,20,0.7)"></span >Late <%= @lates %> </li><li style="color: rgba(28,237,9,0.9)"></span>Excused Absence <%= @excused_absence %> </li><li style="color:rgba(49,88,230,.9)"></span>Unexcused Absence <%= @unexcused_absence %></li></ul>

<canvas id="myChart" width="900" height="300"></canvas>



<script type="text/javascript">
  var data = {
    labels: ["<%= @cohort.name %>"],
    datasets: [
        {
            label: "Lateness",
            fillColor: "rgba(219,20,20,0.7)",
            strokeColor: "rgba(220,220,220,0.8)",
            highlightFill: "rgba(220,220,220,0.75)",
            highlightStroke: "rgba(220,220,220,1)",
            data: [<%= @lates %>]
        },
        {
            label: "Excused Absence",
            fillColor: "rgba(28,237,9,0.9)",
            strokeColor: "rgba(151,187,205,0.8)",
            highlightFill: "rgba(151,187,205,0.75)",
            highlightStroke: "rgba(151,187,205,1)",
            data: [<%= @excused_absence %>]
        },
        {
            label: "Unexcused Absence",
            fillColor: "rgba(49,88,230,.9)",
            strokeColor: "rgba(220,220,220,0.8)",
            highlightFill: "rgba(220,220,220,0.75)",
            highlightStroke: "rgba(220,220,220,1)",
            data: [<%= @unexcused_absence %>]
        }

    ]
};
</script>
